{
  "name": "@cho/components-react",
  "sideEffects": false,
  "version": "1.0.0",
  "private": true,
  "description": "React specific wrapper for cho-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/razvangeangu/cho-design-system"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
